<!--home.wxml-->
<view class="container">
  <view class="head">
    <input placeholder='输入物品关键字' />
    <button class="btn-search">搜索</button>
  </view>
  <view class="divide"></view>

  <map
          id="wxmap"
          longitude="{{longi}}"
          latitude="{{lati}}"
          scale="14"
          show-location="true"
          bindcontroltap="controltap"
          markers="{{markers}}"
          bindmarkertap="markertap"
          polyline="{{polyline}}"
          bindregionchange="regionchange"
          show-location
          style="width: 100%; height: 300px;"
  >

    <cover-view class="reset" bindtap="resetCen">
      <cover-image src="{{coverImage}}"></cover-image>
    </cover-view>
  </map>


</view>
